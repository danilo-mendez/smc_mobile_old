<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
                         xmlns:inputLayout="clr-namespace:Syncfusion.XForms.TextInputLayout;assembly=Syncfusion.Core.XForms"
             Title="Configuracion"
             x:Class="Smc.Mobile.Views.TabletInfoPage">

    <FlexLayout Direction="Column">
        <!-- Body -->
        <FlexLayout FlexLayout.Grow="1" Margin="40 , 20, 20, 40">
            <ScrollView FlexLayout.Grow="1">
                <StackLayout >
                    <inputLayout:SfTextInputLayout Hint="Ingrese Nombre de la Tableta" ContainerBackgroundColor="Transparent"  >
                        <Entry Text="{Binding Name}"  />
                    </inputLayout:SfTextInputLayout>
                </StackLayout>
            </ScrollView>
        </FlexLayout>
        <!-- Footer -->
        <StackLayout HorizontalOptions="EndAndExpand">
            <Button Style="{StaticResource ActionButtonStyle}"
                    HorizontalOptions="Center"
                    WidthRequest="240"
                    Command="{Binding ContinueCommand}"                
                    Text="Continuar" >
            </Button>
        </StackLayout>

    </FlexLayout>
</ContentPage>